<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_style">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text2_size</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">344dp</item>
        <item name="android:textColor">#FAFAFA</item>


    </style>

    <style name="headerText">
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textBody_style" parent="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/tienne</item>
        <item name="android:paddingStart">@dimen/padding_welcomeTxt</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingEnd">@dimen/padding_welcomeTxt</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="logo_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">101dp</item>
        <item name="android:layout_marginTop">52dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="margin_sheo">
        <item name="android:layout_marginStart">@dimen/shoe_margin</item>
        <item name="android:layout_marginEnd">@dimen/shoe_margin</item>

    </style>

    <style name="scrollView_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">198dp</item>
        <item name="android:layout_marginBottom">396dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:contentDescription">@string/list_scrollView</item>
    </style>

    <style name="sec_scrollVeiw">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/caladea_italic</item>
        <item name="android:textColor">#403F3F</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
